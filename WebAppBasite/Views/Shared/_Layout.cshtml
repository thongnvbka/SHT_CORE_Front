<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/Plugin/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/Content/css/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    @*<link href="/Content/js/plugin/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />*@
    <link href="/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/css/carousel.css" rel="stylesheet" />
    <link href="/Content/js/plugin/owlcarousel/assets/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/css/animate.css" rel="stylesheet" />
    <link href="/Content/css/styles.css" rel="stylesheet" />
    <link href="/Content/css/responsive.css" rel="stylesheet" />
    <link href="~/Content/css/btr-menu.css" rel="stylesheet" />

    <link rel="shortcut icon" href="~/icon.ico">

    @RenderSection("styles", false)

</head>
<body>
    <style>
        .scroll-to-top {
            padding: 2px;
            text-align: center;
            position: fixed;
            width: 50px;
            z-index: 10001;
            height: 50px;
            bottom: 49px;
            display: none;
            right: 20px;
            background-size: cover;
            background-image: url(/img/scroll-top.png);
            cursor: pointer;
            display: none;
        }
    </style>
    @await Component.InvokeAsync("Header")
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <img src="/img/slide-show-1.png" class="d-block w-100" alt="...">
            </div>
            <div class="item">
                <img src="/img/slide-show-1.png" class="d-block w-100" alt="...">
            </div>
            <div class="item">
                <img src="/img/slide-show-1.png" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    @RenderBody()

    @await Html.PartialAsync("~/Views/Partial/_Footer.cshtml")
    <div class="scroll-to-top" style="display: block;">

    </div>
    <script src="/Content/js/jquery-2.1.3.js"></script>

    <script src="~/Content/Plugin/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.mousewheel.min.js"></script>

    <script src="/Content/js/plugin/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/js/owl.carousel.js"></script>
    <script src="~/Content/js/jquery.carousel-1.1.min.js"></script>
    <script src="~/Content/js/btr-menu.js"></script>
    <script src="~/Content/js/wow.min.js"></script>
    <script src="~/js/jquery.lazyload.min.js"></script>
    <script src="~/Content/js/jquery.hislide.js"></script>
    <script src="~/Content/js/main.js"></script>
    <div id="fb-root"></div>
    <script>
        new WOW().init();
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v3.1&appId=698606620234363&autoLogAppEvents=1';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
    <div class="over-page" id="overPage"></div>
    @RenderSection("scripts", false)
    <script>
        $("#navbar").btrmenu();
        $('.slide-be').hiSlide();
        $(window).scroll(function () {
            var id_button = '.scroll-to-top';
            var offset = 220;
            if (jQuery(this).scrollTop() > offset) {
                jQuery(id_button).show();
            } else {
                jQuery(id_button).hide();
            }
        });
        $(".scroll-to-top").click(function () {
            $("html, body").animate({ scrollTop: 0 }, "slow");
            $(this).hide();
            return false;
        });
                                    //$('.carousel').carousel();
    </script>
    <script src="~/Content/js/jquery.bxslider.js"></script>

</body>
</html>