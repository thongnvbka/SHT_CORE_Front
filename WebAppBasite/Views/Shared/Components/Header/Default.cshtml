                                        <li>

                                            <a href="@(string.IsNullOrEmpty(cate.Url)?url:cate.Url)">
                                                <img style="width:28px;height:40px" src="@(WebAppBasite.App_Code.PLibs.GetAdminUrl() + cate.Thumbnail )" /><br />
                                                <span class="text-menu">@cate.TenDanhMuc</span>
                                            </a>
                                            @if (childCategory.Count() > 0)
                                            {
                                                <ul>
                                                    @foreach (var child in childCategory)
                                                    {
                                                        var link = "/" + child.MaDanhMuc + ".html";
                                                        <li><a href="@(string.IsNullOrEmpty(child.Url)?link:child.Url)">@child.TenDanhMuc</a></li>
                                                    }

